# Exemple de fichier .env pour la production
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Configuration serveur
SERVER_PORT=8080

# Configuration base de données
DATABASE_URL=jdbc:mysql://localhost:3306/gestion_communaute_db?createDatabaseIfNotExist=true
DATABASE_USERNAME=root
DATABASE_PASSWORD=root
DATABASE_DRIVER=com.mysql.cj.jdbc.Driver


# Configuration JPA
DDL_AUTO=validate
SHOW_SQL=false
FORMAT_SQL=false

# Configuration JWT - OBLIGATOIRE ET SENSIBLE
# Générez une clé de 256 bits minimum (64 caractères hexadécimaux)
JWT_SECRET_KEY=3cfa76ef14937c1c0ea519f8fc057a80fcd04a7420f8e8bcd0a7567c272e007b
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000

# Configuration Swagger
API_DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# Configuration upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Configuration logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
LOG_FILE=logs/citizen-backend.log

# IMPORTANT : 
# - Ne jamais committer le fichier .env dans Git
# - Ajouter .env dans .gitignore
# - Utiliser des valeurs différentes pour dev/staging/prod
# - Changer la clé JWT en production